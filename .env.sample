# ============================================
# AI Personal Assistant - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# cp .env.sample .env

# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# ============================================
# Ollama Configuration (Offline LLM)
# ============================================
# Install Ollama from: https://ollama.ai
# Then run: ollama pull llama3
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# ============================================
# Microsoft Graph API (Office 365)
# ============================================
# Register app at: https://portal.azure.com
# Azure AD > App registrations > New registration
# Add API permissions: Mail.Read, Notes.Read, User.Read
# Create client secret in Certificates & secrets
MS_CLIENT_ID=your_azure_client_id_here
MS_CLIENT_SECRET=your_azure_client_secret_here
MS_TENANT_ID=your_azure_tenant_id_here
MS_REDIRECT_URI=http://localhost:8000/auth/callback

# ============================================
# Email Configuration (IMAP - Optional)
# ============================================
# For Gmail: Enable 2FA and create app password
# https://myaccount.google.com/apppasswords
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_IMAP_USERNAME=your_email@gmail.com
EMAIL_IMAP_PASSWORD=your_app_password_here
EMAIL_IMAP_USE_SSL=true

# ============================================
# Voice Configuration
# ============================================
# Get access key from: https://console.picovoice.ai
PORCUPINE_ACCESS_KEY=your_porcupine_access_key_here
WAKE_WORD=hey assistant

# Whisper model size: tiny, base, small, medium, large
# Smaller = faster but less accurate
WHISPER_MODEL=base

# TTS settings
TTS_RATE=150
TTS_VOLUME=0.8

# Enable/disable voice listener
VOICE_ENABLED=false

# ============================================
# Server Configuration
# ============================================
SERVER_HOST=localhost
SERVER_PORT=8000

# ============================================
# Database Configuration
# ============================================
DATABASE_PATH=./data/assistant.db

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/assistant.log

# ============================================
# Optional: Advanced Settings
# ============================================
# LLM temperature (0.0-2.0, default: 0.7)
# LLM_TEMPERATURE=0.7

# Max tokens for LLM responses
# LLM_MAX_TOKENS=2000

# Network check interval (seconds)
# NETWORK_CHECK_INTERVAL=30

# ============================================
# Weather Configuration (OpenWeatherMap)
# ============================================
# Get API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here
DEFAULT_LOCATION=San Francisco

# ============================================
# Stop Words Configuration
# ============================================
# Comma-separated list of stop words/phrases for voice assistant
# These will stop the voice listener when detected
STOP_WORDS=stop,stop listening,stop the assistant,stop jarvis,jarvis stop,shut down,exit,quit

# ============================================
# TTS Voice Preference
# ============================================
# Set to true to use male voice, false for female voice
TTS_PREFER_MALE=false

# ============================================
# Speech-to-Text Language/Accent Configuration
# ============================================
# Language code for better accent recognition
# Examples: en (English), en-US (US English), en-GB (British), 
#           en-IN (Indian English), hi (Hindi), es (Spanish), etc.
# Leave empty for auto-detection (may be less accurate for accents)
# Common codes: en, en-US, en-GB, en-IN, en-AU, en-CA, hi, es, fr, de, etc.
STT_LANGUAGE=# Examples: en-IN,en-US (comma-separated for multiple accents)

# ============================================
# Location Detection Configuration
# ============================================
# Enable automatic location detection using IP geolocation
# Set to false to always use DEFAULT_LOCATION
USE_AUTO_LOCATION=true

# Optional: IP geolocation service API keys (for better rate limits)
# IPINFO_TOKEN=your_ipinfo_token_here  # Get from https://ipinfo.io
# IPAPI_KEY=your_ipapi_key_here        # Get from https://ipapi.co

# ============================================
# User Configuration
# ============================================
# User name for personalized greetings and goodbyes
USER_NAME=Himanshu
